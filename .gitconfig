# This is Git's per-user configuration file.
[user]
	name = Julius Dehner
	email = julius.dehner@gmail.com

[color]
    diff = auto
	status = auto
	branch = auto
    interactive = auto
	ui = auto
    pager = true
[credential]
	helper = store
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
	prompt = false
