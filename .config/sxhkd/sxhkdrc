# Basic binds
super + Return
	kitty
super + d
	rofi -show run -monitor -1
super + e; super + d
	rofi -show run -monitor -1
super + b
	rofi -show window -monitor -1 -auto-select
super + i
	~/Programs/notify-battery.sh
super + t
	~/Programs/notify-time-date.sh
super + u
	~/Programs/cpu-usage.sh
super + m
	~/Programs/memory-usage.sh
super + m
	touchpad-toggle.sh
super + g
	steam
super + a
	anki &
super + v
	discord
super + n
	lutris
super + c
	brave
super + k
	screenkey --scr 2
super + shift + Delete
	sudo shutdown now
super + l
	physlock
~XF86AudioPlay
	xdotool search --classname plexmediaplayer key XF86AudioPlay
~XF86Launch9
	xdotool search --classname plexmediaplayer key XF86AudioNext
~XF86Launch8
	xdotool search --classname plexmediaplayer key XF86AudioPrev

XF86Calculator
	CW=$(xdotool getactivewindow); xdotool search --name ".* Discord" windowactivate --sync mousemove 280 1000 click 1 mousemove restore; xdotool windowactivate $CW
super + ctrl + r
	pkill -SIGUSR1 sxhkd

# Pulse Audio controls
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%; pactl set-sink-volume 1 +5%;pactl set-sink-volume 2 +5%; pactl set-sink-volume 3 +5%; notify-send 'volume up'
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%; pactl set-sink-volume 1 -5%; pactl set-sink-volume 2 -5%; pactl set-sink-volume 3 -5%; notify-send 'volume down'
XF86AudioMute
	pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle; pactl set-sink-mute 2 toggle; pactl set-sink-mute 3 toggle; notify-send 'mute toggle'
# Sreen brightness controls
# increase screen brightness with notification
XF86MonBrightnessUp
	sudo light -A 5; notify-send 'brightness up'
# decrease screen brightness with notification
XF86MonBrightnessDown
	sudo light -U 5; notify-send 'brightness down'

