# Basic binds
super + Return
	xdotool search --classname kitty windowactivate || kitty
super + d
	rofi -show run -monitor -1
super + e; super + d
	rofi -show run -monitor -1
super + b
	rofi -show window -monitor -1 -auto-select
super + i
	~/Programs/notify-battery.sh
super + t
	~/Programs/notify-time-date.sh
super + u
	~/Programs/cpu-usage.sh
super + m
	~/Programs/memory-usage.sh
super + ctrl + t
	touchpad-toggle.sh
super + g
	xdotool search --classname Steam | tail -1 | xargs xdotool windowactivate || steam
XF86Favorites
	xdotool search --classname plexmediaplayer windowactivate || plexmediaplayer
super + a
	wmctrl -a anki || anki
super + v
	xdotool search ".* Discord" windowactivate || discord
XF86HomePage
	xdotool search "Meet.*Brave" windowactivate || notify-send "No window available"
super + n
	wmctrl -a lutris || lutris
super + c
	wmctrl -a brave || brave
XF86Mail
	wmctrl -a riot || riot-desktop
XF86Search
	wmctrl -a League || notify-send "No window available"
super + ctrl + k
	screenkey --scr 2
super + shift + Delete
	sudo shutdown now
super + ctrl + l
	physlock
super + XF86Favorites
	systemctl suspend
super + XF86Launch5
	sudo xkeysnail ~/.config/xkeysnail/config.py 2>&1 | tee /tmp/xkeysnail.log
super + XF86Launch6
	~/.screenlayout/layout.sh

~XF86AudioPlay
	xdotool search --classname plexmediaplayer key --clearmodifiers XF86AudioPlay
~shift + XF86AudioRaiseVolume
	xdotool search --classname plexmediaplayer key --clearmodifiers XF86AudioNext
~shift + XF86AudioLowerVolume
	xdotool search --classname plexmediaplayer key --clearmodifiers XF86AudioPrev

super + ctrl + r
	pkill -SIGUSR1 sxhkd

super + r
	xdotool key --delay 100 super+b ctrl+n ctrl+n Return

XF86Launch5
	wmctrl -a slack || slack
XF86Launch6
	wmctrl -a toggl || TogglDesktop

XF86Calculator
	~/Programs/vpnup.sh
shift + XF86Calculator
	~/Programs/vpndown.sh

super + shift + j
	xdotool mousemove_relative -- 0 10
super + shift + k
	xdotool mousemove_relative -- 0 -10
super + shift + h
	xdotool mousemove_relative -- -10 0
super + shift + l
	xdotool mousemove_relative -- 10 0
super + shift + y
	xdotool mousemove 960 540
super + shift + space
	xdotool click --delay 100 --clearmodifiers 1
super + shift + Menu
	xdotool click 3

# Pulse Audio controls
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%; pactl set-sink-volume 1 +5%;pactl set-sink-volume 2 +5%; pactl set-sink-volume 3 +5%; notify-send 'volume up'
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%; pactl set-sink-volume 1 -5%; pactl set-sink-volume 2 -5%; pactl set-sink-volume 3 -5%; notify-send 'volume down'
XF86AudioMute
	pactl set-sink-mute 0 toggle; pactl set-sink-mute 1 toggle; pactl set-sink-mute 2 toggle; pactl set-sink-mute 3 toggle; notify-send 'mute toggle'
# Sreen brightness controls
# increase screen brightness with notification
XF86MonBrightnessUp
	sudo light -A 5; notify-send 'brightness up'
# decrease screen brightness with notification
XF86MonBrightnessDown
	sudo light -U 5; notify-send 'brightness down'

